<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "post-form",
  phx_target: @myself,
  phx_change: "update_post" %>

  <%= textarea f, :body, class: "form-control", rows: 50, "phx-debounce": "2000" %>

  <%= submit "Save", class: "btn btn-primary", phx_disable_with: "Saving..." %>
</form>
